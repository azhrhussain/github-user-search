{
  "compilerOptions": {
    "jsx": "react",
    "module": "CommonJS",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "esModuleInterop": true,
  },
  "include": [
    "./src/**/**/*"
  ],
  "globals": {
    "window": "readonly",
    "document": "readonly"
  }
}
